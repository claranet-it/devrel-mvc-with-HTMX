{% extends 'base.html.twig' %}

{% block title %}Search User{% endblock %}

{% block body %}
    <div class="bg-white/90 rounded-3xl shadow-2xl px-16 py-14 max-w-2xl w-full flex flex-col items-center">
    <h1 class="text-3xl font-bold text-blue-900 mb-2 text-center">Articles List</h1>
    <div id="articles-table-and-pagination">

        <div class="bg-white/90 rounded-3xl shadow-2xl px-12 py-4 max-w-2xl w-full flex flex-col items-center">
            <h1 class="text-3xl font-bold text-blue-900 mb-2 text-center">Search User</h1>
                <input class="form-control border border-gray-300 rounded-md px-3 py-2 mb-4" type="search"
                       name="search" placeholder="Begin Typing To Search Users..."
                       hx-get="/users_search"
                       hx-params="search"
                       hx-trigger="input changed, keyup[key=='Enter'], load"
                       hx-target="#search-results">
        </div>


    <div  class="w-full">
        <table class="min-w-full w-full table-fixed divide-y divide-blue-200" style="width:100%;">
            <thead class="bg-blue-100">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-blue-900 uppercase tracking-wider">Id</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-blue-900 uppercase tracking-wider">Name</th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-blue-900 uppercase tracking-wider">Lastname</th>
            </tr>
            </thead>
            <tbody id="search-results">

            </tbody>
        </table>
    </div>
    </div>
    </div>
{% endblock %}