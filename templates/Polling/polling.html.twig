{% extends 'base.html.twig' %}

{% block title %}Polling{% endblock %}

{% block body %}
<div class="bg-white/90 rounded-2xl shadow-2xl px-10 py-8 max-w-lg w-full flex flex-col items-center">
    <h1 class="text-3xl font-bold text-blue-900 mb-2 text-center">Stock Market Growth</h1>
    <p class="text-blue-700 mb-6 text-center">Percentage growth of companies listed on the stock exchange</p>
    <table class="min-w-full divide-y divide-blue-200">
        <thead class="bg-blue-100">
        <tr>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-blue-900 uppercase tracking-wider">
                Company Name
            </th>
            <th scope="col" class="px-6 py-3 text-left text-xs font-bold text-blue-900 uppercase tracking-wider">
                Growth (%)
            </th>
        </tr>
        </thead>
        <tbody class="bg-white divide-y divide-blue-100" hx-get="/polling/data" hx-trigger="load, every 1s" hx-swap="innerHTML">

        </tbody>
    </table>
</div>
{% endblock %}